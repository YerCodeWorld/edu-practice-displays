{
  "name": "eduscript",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "clean": "rimraf dist public-dist",
    "types": "tsc -p tsconfig.json",
    "build:lib": "esbuild src/index.ts --bundle --format=esm --platform=browser --outdir=dist --sourcemap --minify --external:react --external:react-dom --loader:.html=text --loader:.css=text",
    "build:demo": "esbuild src/index.ts --bundle --format=esm --platform=browser --outfile=public-dist/app.js --sourcemap --loader:.html=text --loader:.css=text",
    "build": "pnpm clean && pnpm build:lib && pnpm types && pnpm build:demo && cp -r dist public",
    "dev": "esbuild src/index.ts --bundle --format=esm --platform=browser --outfile=public-dist/app.js --sourcemap --watch=forever --loader:.html=text --loader:.css=text & while inotifywait -r -e modify,create,delete,move src; do pnpm build:lib && cp -r dist public; done",
    "serve": "serve public -l 3000"
  },
  "devDependencies": {
    "esbuild": "^0.23.0",
    "rimraf": "^6.0.0",
    "serve": "^14.2.3",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "inotifywait": "^1.8.3"
  }
}
